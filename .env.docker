# ============================================================================
# NextUp - Docker Environment Configuration
# ============================================================================
# Copy this file to .env when running with Docker Compose

# Database - PostgreSQL via Docker
DATABASE_URL="postgresql://nextup:nextup_dev_password@localhost:5432/nextup"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-development-secret-change-in-production-abc123xyz"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# IGDB API (Twitch)
TWITCH_CLIENT_ID=""
TWITCH_CLIENT_SECRET=""

# IsThereAnyDeal API
ITAD_API_KEY=""

# Redis (via Docker)
REDIS_URL="redis://localhost:6379"

# SMTP (optional)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@nextup.local"
