// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Authentication (NextAuth.js compatible)
// ============================================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts          Account[]
  sessions          Session[]
  ownedGroups       Group[]            @relation("GroupOwner")
  groupMemberships  GroupMember[]
  gameEntries       UserGameEntry[]
  dealPreferences   UserDealPreference?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
}

// ============================================================================
// Groups
// ============================================================================

model Group {
  id               String   @id @default(cuid())
  name             String
  ownerId          String
  inviteCode       String   @unique @default(cuid())
  defaultPlatforms String   @default("[]")
  defaultRegion    String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  owner           User                  @relation("GroupOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members         GroupMember[]
  gameEntries     UserGameEntry[]
  interestProfile GroupInterestProfile?
  recommendations GroupRecommendation[]
}

model GroupMember {
  id       String   @id @default(cuid())
  groupId  String
  userId   String
  role     String   @default("MEMBER")
  joinedAt DateTime @default(now())

  // Relations
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}

// ============================================================================
// Games
// ============================================================================

model Game {
  id               String    @id @default(cuid())
  provider         String    @default("IGDB")
  providerGameId   String
  name             String
  slug             String
  description      String?
  coverUrl         String?
  bannerUrl        String?
  firstReleaseDate DateTime?
  genres           String    @default("[]")
  platforms        String    @default("[]")
  franchises       String    @default("[]")
  themes           String    @default("[]")
  rating           Float?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  userEntries     UserGameEntry[]
  recommendations GroupRecommendation[]
  deals           GameDeal[]

  @@unique([provider, providerGameId])
}

// ============================================================================
// User Game Entries (Personal Lists)
// ============================================================================

model UserGameEntry {
  id         String    @id @default(cuid())
  userId     String
  gameId     String
  groupId    String?
  status     String
  platform   String?
  rating     Int?
  notes      String?
  startedAt  DateTime?
  finishedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  game  Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
  group Group? @relation(fields: [groupId], references: [id], onDelete: SetNull)

  @@unique([userId, gameId])
}

// ============================================================================
// Group Recommendations
// ============================================================================

model GroupInterestProfile {
  id         String   @id @default(cuid())
  groupId    String   @unique
  computedAt DateTime @default(now())
  signals    String
  updatedAt  DateTime @updatedAt

  // Relations
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model GroupRecommendation {
  id                 String   @id @default(cuid())
  groupId            String
  gameId             String
  recommendationType String   @default("UPCOMING")
  score              Float
  reason             String
  dismissedBy        String   @default("[]")
  createdAt          DateTime @default(now())

  // Relations
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  game  Game  @relation(fields: [gameId], references: [id], onDelete: Cascade)
}

// ============================================================================
// Deals
// ============================================================================

model UserDealPreference {
  id             String   @id @default(cuid())
  userId         String   @unique
  enabled        Boolean  @default(false)
  region         String   @default("US")
  platforms      String   @default("[]")
  stores         String   @default("[]")
  priceThreshold Float?
  notifyOn       String   @default("{}")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GameDeal {
  id              String   @id @default(cuid())
  gameId          String
  provider        String   @default("ITAD")
  store           String
  region          String
  price           Float
  msrp            Float
  discountPercent Int
  url             String
  isHistoricalLow Boolean  @default(false)
  fetchedAt       DateTime @default(now())

  // Relations
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
}
