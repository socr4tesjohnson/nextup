// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Authentication (NextAuth.js compatible)
// ============================================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts                Account[]
  sessions                Session[]
  ownedGroups             Group[]            @relation("GroupOwner")
  groupMemberships        GroupMember[]
  gameEntries             UserGameEntry[]
  dealPreferences         UserDealPreference?
  notifications           Notification[]
  notificationPreferences UserNotificationPreference?
  privacyPreferences      UserPrivacyPreference?
  discordConnection       UserDiscordConnection?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
}

// ============================================================================
// Groups
// ============================================================================

model Group {
  id               String   @id @default(cuid())
  name             String
  ownerId          String
  inviteCode       String   @unique @default(cuid())
  defaultPlatforms String   @default("[]")
  defaultRegion    String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  owner            User                   @relation("GroupOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members          GroupMember[]
  gameEntries      UserGameEntry[]
  interestProfile  GroupInterestProfile?
  recommendations  GroupRecommendation[]
  discordSettings  GroupDiscordSettings?
}

model GroupMember {
  id       String   @id @default(cuid())
  groupId  String
  userId   String
  role     String   @default("MEMBER")
  joinedAt DateTime @default(now())

  // Relations
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}

// ============================================================================
// Games
// ============================================================================

model Game {
  id               String    @id @default(cuid())
  provider         String    @default("IGDB")
  providerGameId   String
  name             String
  slug             String
  description      String?
  coverUrl         String?
  bannerUrl        String?
  firstReleaseDate DateTime?
  genres           String    @default("[]")
  platforms        String    @default("[]")
  franchises       String    @default("[]")
  themes           String    @default("[]")
  gameModes        String    @default("[]")  // ["Single player", "Multiplayer", "Co-op", etc.]
  playerCount      String?                    // e.g., "1", "1-4", "2-8 online"
  videos           String    @default("[]")  // JSON array of {name, youtubeId} for game trailers
  rating           Float?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  userEntries     UserGameEntry[]
  recommendations GroupRecommendation[]
  deals           GameDeal[]

  @@unique([provider, providerGameId])
}

// ============================================================================
// User Game Entries (Personal Lists)
// ============================================================================

model UserGameEntry {
  id         String    @id @default(cuid())
  userId     String
  gameId     String
  groupId    String?
  status     String
  platform   String?
  rating     Int?
  notes      String?
  startedAt  DateTime?
  finishedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  game  Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
  group Group? @relation(fields: [groupId], references: [id], onDelete: SetNull)

  @@unique([userId, gameId])
}

// ============================================================================
// Group Recommendations
// ============================================================================

model GroupInterestProfile {
  id         String   @id @default(cuid())
  groupId    String   @unique
  computedAt DateTime @default(now())
  signals    String
  updatedAt  DateTime @updatedAt

  // Relations
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model GroupRecommendation {
  id                 String   @id @default(cuid())
  groupId            String
  gameId             String
  recommendationType String   @default("UPCOMING")
  score              Float
  reason             String
  dismissedBy        String   @default("[]")
  createdAt          DateTime @default(now())

  // Relations
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  game  Game  @relation(fields: [gameId], references: [id], onDelete: Cascade)
}

// ============================================================================
// Deals
// ============================================================================

model UserDealPreference {
  id             String   @id @default(cuid())
  userId         String   @unique
  enabled        Boolean  @default(false)
  region         String   @default("US")
  platforms      String   @default("[]")
  stores         String   @default("[]")
  priceThreshold Float?
  notifyOn       String   @default("{}")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GameDeal {
  id              String   @id @default(cuid())
  gameId          String
  provider        String   @default("ITAD")
  store           String
  region          String
  price           Float
  msrp            Float
  discountPercent Int
  url             String
  isHistoricalLow Boolean  @default(false)
  fetchedAt       DateTime @default(now())

  // Relations
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
}

// ============================================================================
// Notifications
// ============================================================================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // "deal_alert", "group_invite", "friend_activity", etc.
  title     String
  message   String
  link      String?  // Optional URL to navigate to
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================================================
// User Notification Preferences
// ============================================================================

model UserNotificationPreference {
  id                 String   @id @default(cuid())
  userId             String   @unique
  dealAlerts         Boolean  @default(true)
  groupInvites       Boolean  @default(true)
  friendActivity     Boolean  @default(true)
  recommendations    Boolean  @default(true)
  emailNotifications Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================================================
// User Privacy Preferences
// ============================================================================

model UserPrivacyPreference {
  id                    String   @id @default(cuid())
  userId                String   @unique
  showActivityToGroup   Boolean  @default(true)  // Show what games I'm playing to group members
  showGameStatus        Boolean  @default(true)  // Show my game statuses (Now Playing, Finished, etc.)
  showRatings           Boolean  @default(true)  // Show my game ratings to others
  showNotes             Boolean  @default(false) // Show my personal notes to others
  showOnlineStatus      Boolean  @default(true)  // Show when I was last active
  allowGroupInvites     Boolean  @default(true)  // Allow anyone to invite me to groups
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================================================
// Tier Rankings
// ============================================================================

model TierList {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String?  // User who created this tier list (null for group tier lists)
  groupId     String?  // Group this tier list belongs to (null for personal tier lists)
  isPublic    Boolean  @default(false)  // Whether this tier list is visible to others
  categories  String   @default("[]")   // JSON array of genre/category filters (e.g., ["RPG", "Action"])
  platforms   String   @default("[]")   // JSON array of platform filters (e.g., ["PC", "PlayStation"])
  gameModes   String   @default("[]")   // JSON array of player mode filters (e.g., ["Co-op", "Multiplayer"])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  games TierListGame[]

  @@index([userId])
  @@index([groupId])
  @@index([isPublic])
}

model TierListGame {
  id         String   @id @default(cuid())
  tierListId String
  gameId     String
  tier       String   // S, A, B, C, D, F
  position   Int      // Order within the tier
  createdAt  DateTime @default(now())

  // Relations
  tierList TierList @relation(fields: [tierListId], references: [id], onDelete: Cascade)

  @@unique([tierListId, gameId])
  @@index([tierListId])
}

// ============================================================================
// Discord Integration
// ============================================================================

model UserDiscordConnection {
  id                String   @id @default(cuid())
  userId            String   @unique
  discordId         String   @unique  // Discord user ID
  discordUsername   String             // Discord username
  discordAvatar     String?            // Discord avatar hash
  accessToken       String?            // Discord OAuth access token
  refreshToken      String?            // Discord OAuth refresh token
  tokenExpiresAt    DateTime?          // When the access token expires
  showDiscordStatus Boolean  @default(true)  // Show Discord online status to group members
  syncNowPlaying    Boolean  @default(true)  // Auto-update "Now Playing" from Discord activity
  lastActivitySync  DateTime?          // Last time we synced Discord activity
  currentGame       String?            // Current game being played on Discord
  isOnline          Boolean  @default(false)  // Whether user is currently online on Discord
  lastOnline        DateTime?          // Last time user was online on Discord
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GroupDiscordSettings {
  id               String   @id @default(cuid())
  groupId          String   @unique
  webhookUrl       String?  // Discord webhook URL for notifications
  channelId        String?  // Discord channel ID for bot integration
  serverId         String?  // Discord server (guild) ID
  enableWebhook    Boolean  @default(false)  // Send notifications to Discord
  notifyNewGames   Boolean  @default(true)   // Notify when members add new games
  notifyNowPlaying Boolean  @default(true)   // Notify when members start playing
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
}
